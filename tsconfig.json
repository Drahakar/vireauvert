{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "strictFunctionTypes": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "preserveValueImports": false, 
    "importsNotUsedAsValues": "preserve",
    "strict": true,
    "target": "ES2020",
    "module": "es2022",
    "lib": ["ES2020", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
  
}
